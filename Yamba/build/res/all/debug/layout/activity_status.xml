<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/steampunk_background"
        android:baselineAligned="true">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="@dimen/yamba_title_text_size"
            android:gravity="center"
            android:layout_margin="@dimen/yamba_margin"
            android:id="@+id/lblTitle"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startCharCount"
            android:id="@+id/lblCount"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/yamba_margin"
            />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/txtStatus"
            android:inputType="textMultiLine"
            android:hint="@string/statusHint"
            android:layout_weight="1"
            android:gravity="left|top"
            android:background="@color/YambaTransparentLight"
            />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:id="@+id/btnUpdate"
            android:textSize="@dimen/yamba_button_text_size"/>
</LinearLayout><!-- From: file:/home/slavek/AndroidStudioProjects/YambaProj/Yamba/src/main/res/layout/activity_status.xml -->